{
  // ===== Unity C# Development =====
  "editor.defaultFormatter": "ms-dotnettools.csharp",
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Library": true,
    "**/Temp": true,
    "**/Obj": true,
    "**/Logs": true,
    "**/UserSettings": true,
    "**/*.meta": false,
    "**/*.csproj": true,
    "**/*.sln": true
  },
  "files.associations": {
    "*.shader": "shaderlab",
    "*.cginc": "shaderlab",
    "*.hlsl": "hlsl",
    "*.compute": "hlsl"
  },

  // ===== C# / OmniSharp =====
  "dotnet.defaultSolution": "disable",
  "omnisharp.useModernNet": true,
  "omnisharp.enableRoslynAnalyzers": true,

  // ===== Search & Exclusions =====
  "search.exclude": {
    "**/Library": true,
    "**/Temp": true,
    "**/Obj": true,
    "**/Logs": true,
    "**/node_modules": true,
    "**/WebGL-Build": true
  },

  // ===== Terminal =====
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // ===== Unity Specific =====
  "unity.defaultEditor": "code"
}
